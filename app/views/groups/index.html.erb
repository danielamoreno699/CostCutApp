<!-- app/views/home/index.html.erb -->
 <%= stylesheet_link_tag 'category' %>

 <%= render partial: 'shared/navbar' %>

<%= render_flash_messages %>



<div class="groups-index">
<% if @groups.any? %>
  <% @groups.each do |group| %>
    <div class="group">
    <%= link_to user_group_path(user_id: group.author, id: group) do %>
        <%= image_tag "group_icons/#{group.icon}", class: "icon-image" %>
    <% end %>
      <%= link_to group.name, user_group_path(user_id: group.author, id: group) %>
      <p class="amount"> $ <%= group.sum_amount() %> </p>

    </div>
  <% end %>
<% else %>
  <p>There are no groups yet.</p>
<% end %>

<div class="add-group-btn">
<div class="center">
<%= link_to "Add new group", new_user_group_path(current_user), class: "group-indx-add" %>
</div>
</div>



</div>
